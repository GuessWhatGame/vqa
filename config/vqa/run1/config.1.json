{
  "name" : "Baseline",

  "model": {

    "type" : "film",

    "question": {
      "word_embedding_dim": 300,
      "rnn_state_size": 1024,
      "glove" : true,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "classifier":
    {
      "no_mlp_units": 0
    },

    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp" : 256,
          "no_glimpses" : 2
        }

    },

    "fusion": {
        "mode" : "vis",
        "projection_size" : 1024
    },



    "loss" : "soft",
    "dropout_keep_prob" : 0.5

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling" ,"basic_reading_unit_att", "basic_reading_unit_proj"]
  },

  "seed": -1
}