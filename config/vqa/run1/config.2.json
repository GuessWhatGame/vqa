{
  "name" : "FiLM (cell): +FiLM, +attention + basic +no_cell",

  "model": {

    "type" : "film",

    "question": {
      "word_embedding_dim": 300,
      "rnn_state_size": 1024,
      "glove" : true,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "classifier":
    {
      "no_mlp_units": 800
    },

    "film_input":
    {

      "reading_unit": {
        "reading_unit_type" : "only_question"
      }

    },


    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "none"
      }

    },

    "film_block":
    {
      "stem" : {
        "spatial_location" : true,
        "conv_out": 256,
        "conv_kernel": [3,3]
      },

      "resblock" : {
        "feature_size" : [128, 128, 128, 128],
        "spatial_location" : true,
        "kernel1" : [1,1],
        "kernel2" : [3,3]
      },

      "head" : {
        "spatial_location" : true,
        "conv_out": 256,
        "conv_kernel": [1,1],

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp" : 256,
          "no_glimpses" : 2
        }
      }
    },

    "fusion": {
        "mode" : "none"
    },

    "loss" : "soft",
    "dropout_keep_prob" : 0.5

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling" ,"basic_reading_unit_att", "basic_reading_unit_proj"]
  },

  "seed": -1
}