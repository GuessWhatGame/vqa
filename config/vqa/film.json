{
  "name" : "FiLM (cell): +FiLM, +attention + basic +cell(+att+feedback)",

  "model": {

    "type" : "film",
    "split_question" : false,

    "inputs": {
      "crop": true,
      "image": true
    },

    "question": {
      "word_embedding_dim": 200,
      "rnn_state_size": 1024,
      "glove" : false,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "category": {
      "n_categories": 90,
      "embedding_dim": 200
    },

    "spatial": {
      "no_mlp_units": 30
    },

    "classifier":
    {
      "inputs" :
      {
       "question": false,
       "category": false,
       "spatial": false
      },

      "no_mlp_units": 512
    },

    "film_input":
    {
      "category": true,
      "spatial": false,
      "mask": false,

      "reading_unit": {
        "reading_unit_type" : "basic",

        "use_attention" : true,
        "attention_units" : 0,
        "shared_attention" : true,
        "fuse_mode" : "dot",

        "feedback_loop" : true
      }

    },


    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "none"
      }

    },

    "film_block":
    {
      "stem" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 256,
        "conv_kernel": [3,3]
      },

      "resblock" : {
        "feature_size" : [128, 128, 128, 128],
        "spatial_location" : true,
        "mask" : true,
        "kernel1" : [1,1],
        "kernel2" : [3,3]
      },

      "head" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 256,
        "conv_kernel": [1,1],

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp" : 256,
          "no_glimpses" : 1
        }
      }
    },

    "fusion": {
        "mode" : "none",
        "visual_dialogue_projection" : 256
    },

    "loss" : "soft",
    "dropout_keep_prob" : 0.5

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling" ,"basic_reading_unit_att", "basic_reading_unit_proj"]
  },

  "seed": -1
}