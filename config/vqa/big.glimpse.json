{
  "model": {

    "name" : "LSTM",

    "image_input": "raw",
    "cbn":
    {
      "use_cbn": true,
      "cbn_embedding_size": 512
    },

    "image":
    {
      "image_input": "raw",
      "dim": [224, 224, 3],
      "normalize": true,

      "attention" : {
        "mode": "glimpse",
        "no_attention_mlp": 512,
        "no_glimpses": 2
      }
    },

    "glove": true,

    "word_embedding_dim": 300,
    "no_hidden_LSTM": 512,
    "no_LSTM_cell": 1,

    "no_question_mlp": 1024,
    "no_picture_mlp": 1024,

    "no_hidden_final_mlp": 1024,
    "dropout_keep_prob": 0.5,



    "resnet_version": 50,

    "loss": "soft",
    "activation": "tanh",
    "excluded_scope_names": ["resnet_v1_50/conv1", "shortcut", "block1"],
    "finetune" : []
  },

  "optimizer": {
    "no_epoch": 1,
    "learning_rate": 3e-4,
    "batch_size": 20,
    "clip_val": 5
  },

  "dico_name" : "dict.json",
  "merge_dataset": false,
  "seed": -1
}